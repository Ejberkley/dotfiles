{
  // General Config settings
  "editor.fontSize": 11.5,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "ruby.intellisense": "rubyLocate",
  "window.restoreWindows": "all",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#2c2c2c"
  },
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  // Allow comments in json files
  "files.associations": {
    "*.json": "jsonc"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.jpg": true,
    "**/.jpeg": true,
    "**/.png": true,
    "**/.gif": true,
    "**/.ttf": true,
    "**/.tga": true,
    "**/.dds": true,
    "**/.ico": true,
    "**/.eot": true,
    "**/.pdf": true,
    "**/.swf": true,
    "**/.jar": true,
    "**/.zip": true,
    "**/.dat": true,
    "tmp/*": true,
    "log/*": true,
    "doc/*": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "search.exclude": {
    "**/versionSets": true,
    "**/db/schema.rb": true,
    "**/db/migrate": true,
    "**/db/archived_migrations": true,
    "**/db/public": true,
    "**/db/log": true,
    "**/*.dat": true,
    "**/*.mmdb": true,
    "**/build/**": true
  },
  /* Linters */
  "eslint.run": "onSave",
  "ruby.format": "rubocop",
  "ruby.rubocop.onSave": true,
  "[ruby]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  // "editor.formatOnSave": false,
  // "editor.formatOnSaveTimeout": 5000,
  // "editor.formatOnType": true,
  // "editor.formatOnPaste": true,
  // "ruby.rubocop.executePath": "/Users/brennen/.rbenv/shims/",
  // Prevent default linters from interfering with stylelint
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "breadcrumbs.enabled": true,
  "eslint.alwaysShowStatus": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.home": "/Library/Java/JavaVirtualMachines/jdk-11.0.5.jdk/Contents/Home",
  "java.semanticHighlighting.enabled": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "debug.node.autoAttach": "on",
  "debug.javascript.autoAttachFilter": "always",
  "extensions.ignoreRecommendations": true,
  "gitlens.currentLine.scrollable": false,
  "typescript.autoClosingTags": true
}