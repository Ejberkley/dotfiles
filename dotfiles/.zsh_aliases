#!/bin/zsh

# Edit and load dotfiles
if [[ $EDITOR == 'vim' ]]
then
  alias dotedit="vim ~/dotfiles/dotfiles/.zsh_aliases"
else
  alias dotedit="${EDITOR} -n ~/dotfiles"
fi
alias dotfiles="cd ~/dotfiles"
alias load="source ~/.zshrc"

# Navigation
alias desk="cd ~/desktop"

# Git
alias c="git checkout"
alias d="git diff"
alias s="git status"
alias b="git branch"
alias cb="git checkout -b"
alias cm="git checkout mainline; git pull"
alias co="git commit"
alias del="git branch -D"
alias ga="git add"
alias force="git push --force-with-lease"
alias undo="git reset HEAD~1"
alias amend="git commit -a --amend"
alias amendnow="git commit -a --amend --date=\"now\""
alias st='open -a SourceTree .'

# Open IntelliJ
alias idea='open -na "IntelliJ IDEA.app"'

# Amazon - shortcuts
alias bb="brazil-build"
alias bws="brazil ws"
alias wsc="brazil ws create --name"
alias wsu="brazil ws use -p"
alias nds="ninja-dev-sync"
alias al2="brazil ws use --platform AL2_x86_64"
alias deployfe="wa && bb release && fe && ./sam package && ./sam deploy"

# Amazon - navigation
alias wp="cd ~/workplace"
alias fe="cd ~/workplace/CharismaNSpectFrontendLambda/src/CharismaNSpectFrontendLambda"
alias fet="cd ~/workplace/CharismaNSpectFrontendLambda/src/CharismaNSpectFrontendLambdaTests"
alias be="cd ~/workplace/CharismaNSpectBackendLambda/src/CharismaNSpectBackendLambda"
alias bet="cd ~/workplace/CharismaNSpectBackendLambda/src/CharismaNSpectBackendLambdaTests"
alias bem="cd ~/workplace/CharismaNSpectBackendLambda/src/CharismaNSpectModel"
alias wa="cd ~/workplace/CharismaNSpectFrontendLambda/src/CharismaNSpectWebApplication"
alias cli="cd ~/workplace/CharismaNSpectCli/src/CharismaNSpectCli"
alias bmp="cd ~/workplace/CharismaBulkMetricsPublisher/src/CharismaBulkMetricsPublisher"

# Amazon - cloud desktop shortcuts
if [[ $ENVIRONMENT_NAME == 'cloud-desktop' ]]
then
alias covdir="cd /local/home/bberkle/workplace/CharismaNSpectBackendLambda/build/CharismaNSpectBackendLambda/CharismaNSpectBackendLambda-1.0/AL2_x86_64/DEV.STD.PTHREAD/build/brazil-documentation/coverage"
alias serve="python3 -m http.server 8000"
fi
