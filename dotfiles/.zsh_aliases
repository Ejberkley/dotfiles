# Navigation
alias desk="cd ~/desktop"
alias dot="cd ~/dotfiles"

alias w="cd ~/work"

# Project aliases
alias cnd="cd ~/work/cnd"
alias ec2="cd ~/work/ec2worker"
alias ce="cd ~/work/chimera-edu"
alias ch="cd ~/work/chimera"
alias cw="cd ~/work/chimera-widget"
alias es="cd ~/work/edu-styles"
alias g="cd ~/work/guide"
